<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.UpdateSalariesController"
      prefHeight="300.0" prefWidth="400.0">

    <Label text="Update Salaries" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <TextField fx:id="percentageField" promptText="Percentage Increase (e.g., 3.2)" />
    <TextField fx:id="minSalaryField" promptText="Minimum Salary (e.g., 58000)" />
    <TextField fx:id="maxSalaryField" promptText="Maximum Salary (e.g., 105000)" />
    
    <Button text="Update Salaries" onAction="#handleUpdateSalaries" />
</VBox>