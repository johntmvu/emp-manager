<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.EditEmployeeController"
      prefHeight="400.0" prefWidth="300.0">

    <Label text="Edit Employee" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <TextField fx:id="firstNameField" promptText="First Name" />
    <TextField fx:id="lastNameField" promptText="Last Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="salaryField" promptText="Salary" />
    <TextField fx:id="ssnField" promptText="SSN" />
    <TextField fx:id="jobTitleField" promptText="Job Title" />
    <TextField fx:id="divisionField" promptText="Division" />
    
    <Button text="Save Changes" onAction="#handleSaveChanges" />
</VBox>